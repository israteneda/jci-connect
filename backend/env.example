# JCI Connect Backend Environment Variables

# Application Configuration
APP_NAME="JCI Connect API"
APP_VERSION="1.0.0"
DEBUG=false
HOST=0.0.0.0
PORT=8000

# CORS Origins (comma-separated)
CORS_ORIGINS="http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000,http://127.0.0.1:5173"

# Supabase Configuration
SUPABASE_URL=your_supabase_url_here
SUPABASE_SECRET_KEY=your_supabase_secret_key_here

# Email Configuration
# SMTP settings are stored in organization_settings table
# Configure these through the frontend Admin Data page or directly in the database
# The system will send welcome emails, update notifications, and admin alerts

# Security
SECRET_KEY=your_secret_key_here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
